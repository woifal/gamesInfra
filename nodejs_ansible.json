{
    "builders": [
        {
            "type": "docker",
            "image": "packerpocbaseimage:20.1",
            "commit": "true",
            "pull": "false"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "../../gamesBackend",
            "destination": "/tmp/gamesBackend"
        },
        {
            "type": "ansible-local",
            "playbook_file": "nodejs_ansible.yml"
        }
    ],
    "post-processors": [
        [
            {
                "type": "docker-tag",
                "repository": "nodejsansible",
                "tag": "0.1"
            }
        ]
    ]
}