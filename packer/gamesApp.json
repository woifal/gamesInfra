{
    "builders": [
        {
            "type": "docker",
            "image": "nodejsansible:1.5",
            "commit": "true",
            "pull": "false",
            "changes": [
                "ENTRYPOINT cd /tmp/gamesApp && npm run start"
            ]
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "../gamesApp",
            "destination": "/tmp/gamesApp"
        },
        {
            "type": "ansible-local",
            "playbook_file": "ansible/gamesApp.yml",
            "extra_arguments": [
                "-vvv"
            ]
        }
    ],
    "post-processors": [
        [
            {
                "type": "docker-tag",
                "repository": "woifal/gamesapp",
                "tag": "1.11"
            }
        ]
    ]
}